	#include 'stdafx'
  #include <iostream>
  using namespace std;
  
  
  int main() 
  {
  const  int MAX_SIZE = 10;
	int n, m, arr[MAX_SIZE][MAX_SIZE];

	cout << "The number of rows: ";
	cin >> n;
	cout << "The number of columns: ";
	cin >> m;

	int min = 0, max = 0;

	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			cout << "arr[" << i << "][" << j << "] = ";
			cin >> arr[i][j];
		}
	}

	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			if (arr[i][j] > max)
			{
				max = arr[i][j];
			}

			else if (arr[i][j] < min)
			{
				min = arr[i][j];
			}
		}
	}

	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			cout << arr[i][j] << ' ';
		}
		cout << endl;
	}

	cout << max << " " << min << endl;
  }
